<%- include('partials/header'); -%>
    <div class="contenido col-12 row">
        <div class="tabla col-12 table-responsive col-md-8 row mt-4 bg-light">
            <% if(data != ""){ %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                        <% for (let i = 0; i < data.length; i++) { %>
                            <tr class="fila" >
                                <td scope="row"><%= (i + 1) %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].direccion %></td>
                                <td><%= data[i].telefono %></td>
                                <td>
                                    <button class="btn btn-success rounded-pill botonInfo" id="botonEditar" data-id="<%= data[i].id %>" data-nombre="<%= data[i].nombre %>" data-direccion = "<%= data[i].direccion %>" data-telefono = "<%= data[i].telefono %>" data-bs-toggle="modal" data-bs-target="#exampleModal">Editar</button>
                                    <a href="/delete/<%= data[i].id %>"class="btn btn-danger rounded-pill">Eliminar</a>
                                </td>
                            </tr>
                        
                        <% } %>
                </tbody>
            </table>
            <% } else{ %>  
                <div class="position-relative mt-4 mb-3 text-center">
                    <h4 class="position-absolute top-50 start-50 translate-middle">No hay datos registrados</h4>
                </div>
                        
          
               <% } %>
        </div>
        <div class="col-12 col-md-4 formulario">
            <form action="/add" id="formulario" method="post" class="card-body">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Nombre</label>
                    <input type="text" id="nombre" name="nombre" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresar nombre">
                    <p id="errNombre" class="text-danger"></p>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Dirección</label>
                    <input type="text" id="direccion" name="Direccion" class="form-control" id="exampleInputPassword1" placeholder="Ingresar Dirección">
                    <p id="errDireccion" class="text-danger"></p>
                </div>
                <div class="mb-3">
                    <label class="form-check-label" for="exampleCheck1">Teléfono</label>
                    <input type="text" id="telefono" name="Telefono" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresar teléfono">
                    <p id="errTelefono" class="text-danger"></p>
                </div>
                <div class="col-12 text-center">
                    <button id="boton" class="btn btn-dark rounded-pill">Agregar</button>
                </div>
            </form>

        </div>
    </div>
    </div>

    <%- include('partials/footer'); -%>